<%# start.js.erb - This file displays the results of P45's 1st firing
                  and prompts the user to fire back, thus beginning the
                  back and forth volley of the game %>

$('#my_messages').empty();
<%# Display results of first firing %>
window.underAttack(<%= @index %>, "<%=j raw @result %>")

window.updateMyStats("<%=j raw @myStats %>");
<%# Even though no enemy stats, update them so the basic layout will display %>
window.updateEnemyStats("<%=j raw @enemyStats %>");

window.yourTurn();