<%# start.js.erb - This file displays the results of P45's 1st firing
                  and prompts the user to fire back, thus beginning the
                  back and forth volley of the game %>

$('#my_messages').empty();

var ship = <%= @ship == nil ?  nil.to_json : "'#{@ship}'" %>;
window.enemyAttack(<%= @index %>, "<%=j @hit %>", ship, <%= @sunk %>);

var my_sunk_ships = <%= @my_sunk_ships == nil ? nil.to_json : "['#{@my_sunk_ships.join('\',\'')}']"  %>;
window.updateMyStats(<%= @my_hits %>, <%= @my_misses %>, my_sunk_ships);

var enemy_sunk_ships = <%= @enemy_sunk_ships == nil ? nil.to_json : "['#{@enemy_sunk_ships.join('\',\'')}']"%>;
window.updateEnemyStats(<%=@enemy_hits%>,<%=@enemy_misses%>,enemy_sunk_ships);

