<div id="game">
  <%# Left half is My Board, with my ships, and relevant stats %>
  <div id="my_stats">
    <h4></h4>
    <div class="hits"></div>
    <div class="misses"></div>
    <div class="sunk"></div>
  </div>  
  <div id="my_board">                 
    <div class="board"></div>
    <div id="ships"></div>
  </div>     
  
  <%# Right half is Enemy's Board, with hits/misses, and relevant stats %>
  <div id="enemy_board">                    
    <div class="board"></div>
    <div id="targets"></div>
  </div>    
  <div id="enemy_stats">   
    <h4></h4>
    <div class="hits"></div>
    <div class="misses"></div>
    <div class="sunk"></div>
  </div>
</div>

<%# Areas to display messages while the game is being played %>
<div id="messages">
  <div id="register">
      <div id="text">
        <h1>Are you prepared to take on the Platform 45 Battleship Bot?</h1>
      </div>
      <div id="button">
        <%= button_to "Let's Do it!", 
            new_player_path, 
            class: "button2", 
            method: :get,
            remote: true %>
      </div>
  </div>
  <div id="my_messages" style="display: none;"></div>
  <div id="enemy_messages" style="display: none;"></div>
</div>