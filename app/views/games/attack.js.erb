<%# This file will display the results of the attack on P45 
    and turn control over to the enemy%>


$('#enemy_messages').empty();

<%# Pass entire json result to js %>
window.attack(<%= @index %>, "<%=j raw @result %>");
<%# Pass json of enemy stats %>
window.updateEnemyStats("<%=j raw @stats %>");

<% if @lost %>
  window.gameOver("you")
<% else %>
  window.enemyTurn();
<% end %>


